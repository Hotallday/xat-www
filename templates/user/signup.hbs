{{> errors}}

<form action='/signup' method='post'>
  <label for="name">Username</label>
  <input type="text" id="name" name="name" required="required" tabindex=2 autocorrect="off" autocapitalize="off" autofocus/>

  <label for="password">Password</label>
  <input type="password" id="password" name="password" required="required" tabindex=3 />

  <label for="password">Email</label>
  <input type="email" id="email" name="email" required="required" tabindex=4 />

  <input type="submit" class="full-width" value="Submit" />

  <input type="hidden" name="done" value="{{donePath}}">

  <p class="center">
    <a href="/forgot">forgot</a> |
    <a href="/signup">signup</a>
  </p>
  {{> form_security }}
</form>